.addressCon {
    position: relative;
    height: 600rpx;
    margin: 30rpx 20rpx;
    overflow: hidden;
    box-sizing: border-box;
}

.addressCon .holder {
    display: flex;
    justify-content: start;
    margin-top: 40rpx;
}

.addressCon .holder .inp {
    position: relative;
    width: 500rpx;
    margin-left: 40rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.addressCon .holder .inp .weizhi {
    position: absolute;
    top: 0;
    left: 0;
}

.addressCon .holder .inp1 {
    margin-left: 100rpx;
}

.addressCon .holder .inp1 .img1 {
    position: absolute;
    top: 470rpx;
    left: 650rpx;
    width: 40rpx;
    height: 40rpx;
}

.addLine {
    margin-top: -60rpx;
    border: 1px solid rgba(187, 187, 187, 100);
}

.set {
    margin: 40rpx;
    display: flex;
    justify-content: space-between;

}

.add_address {
    width: 450rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background-color: #7cb342;
    border-radius: 46rpx;
    color: #fff;
    margin: 60rpx auto;
    font-size: 36rpx;
    box-sizing: border-box;
}

.wx-switch-input {
    width: 84rpx !important;
    height: 50rpx !important;
    margin: 0 !important;
    padding: 0 !important;
}

/*白色样式（false的样式）*/
.wx-switch-input::before {
    width: 79rpx !important;
    height: 46rpx !important;
}

/*绿色样式（true的样式）*/
.wx-switch-input::after {
    width: 45rpx !important;
    height: 46rpx !important;
}