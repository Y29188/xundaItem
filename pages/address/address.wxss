/* pages/fillAddress/fillAddress.wxss */
.writeAdd {
    width: 680rpx;
    height: 300rpx;
    box-sizing: border-box;
    padding-left: 60rpx;
    overflow: hidden;
}

.all {
    box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.4);
    margin: 50rpx auto;
    border-radius: 6rpx;
    opacity: 0.85;
    background-color: rgba(255, 255, 255, 79);
}

.writeAdd .header {
    display: flex;
    justify-content: start;
    margin-top: 20rpx;
}

.writeAdd .header .WriteIcon {
    width: 55rpx;
    height: 55rpx;
    background-color: #7cb342;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
}

.writeAdd .header .WriteIcon .img {
    width: 35rpx;
    height: 35rpx;

}

.writeAdd .header .cangkuAdd {
    margin-top: 10rpx;
    font-weight: bold;
    margin-left: 20rpx;
}

.writeAdd .mid {
    display: flex;
    margin: 20rpx 20rpx;
}

.writeAdd .mid .cangkuName {
    font-size: 30rpx;
    margin-left: 20rpx;
}

.writeAdd .mid .canhkuTel {
    font-size: 28rpx;
    margin-left: 100rpx;
}

.writeAdd .mid .copy {
    font-size: 24rpx;
    color: #5dc36b;
    margin-top: 4rpx;
    background-color: #d9f1dd;
    border-radius: 8rpx;
}

.writeAdd .deAddress {
    margin-left: 36rpx;
    font-size: 26rpx;
    color: #999ba3;
}

.collect {
    width: 680rpx;
    height: 694rpx;
    overflow: hidden;

}

.collect .msg {
    margin-top: 60rpx;
    margin-left: 100rpx;
    overflow: hidden;
    font-weight: bold;
}

.collect .add {
    display: flex;
    margin-left: 90rpx;
    margin-top: 20rpx;
    color: rgba(231, 105, 29, 100);
    font-size: 24rpx;
}

.collect .add .img {
    width: 34rpx;
    height: 34rpx;
    margin-right: 20rpx;
    overflow: hidden;
}

.collect .add .selectAddress {
    margin-left: 180rpx;
    line-height: 40rpx;
    width: 130rpx;
    text-align: center;
    height: 40rpx;
    border-radius: 8rpx;
    background-color: rgba(217, 241, 221, 100);
    color: rgba(64, 184, 80, 100);
    font-size: 24rpx;
    border: 2rpx solid rgba(64, 184, 80, 100);
}

.addCon {
    width: 694rpx;
    height: 60rpx;
}

.addCon .wrap {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    margin: 20rpx 30rpx;

}

.addCon .wrap .name {
    width: 160rpx;
    height: 40rpx;
    line-height: 40rpx;
    text-align: right;
}

.addCon .wrap .tip {
    width: 450rpx;
    color: #d9d3d3;
    font-size: 26rpx;
}

.exchangeBtn {
    width: 374rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    border-radius: 8rpx;
    margin: 102rpx auto;
    color: #fff;
    background-color: #7cb342;
}

