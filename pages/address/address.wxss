.box {
    width: 680rpx;
    height: 300rpx;
    background-color: #fff;
    padding: 30rpx 20rpx;

}

.all {
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
    box-sizing: border-box;
    margin: 40rpx 36rpx;
}

.box .imgWrap {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background-color: #7cb342;
}

.box .imgWrap .img {
    width: 40rpx;
    height: 40rpx;
}

.box .cangkuAdd {
    font-weight: 700;
    margin-top: -50rpx;
    margin-left: 80rpx;
}

.box .detailAdd {
    display: flex;
    margin-top: 20rpx;
    margin-left: 40rpx;
}

.box .detailAdd .tel {
    margin-left: 50rpx;
}

.box .address {
    font-size: 26rpx;
    color: rgba(153, 153, 153, 100);
    margin-left: 40rpx;
    margin-top: 20rpx;
}


.copy {
    width: 45rpx;
    height: 26rpx;
    border-radius: 8rpx;
    background-color: rgba(217, 241, 221, 100);
    color: rgba(64, 184, 80, 100);
    font-size: 22rpx;
    border: 2rpx solid rgba(217, 241, 221, 100);
    margin-top: 7rpx;
    margin-left: 10rpx;
}

.targetAdd {
    height: 740rpx;
    padding-top: 20rpx;
    padding-left: 10rpx;
}

.targetAdd .msg {
    margin-left: 50rpx;
    margin-top: 30rpx;
    font-weight: 550;
}

.targetAdd .add {
    display: flex;
    color: rgba(231, 105, 29, 100);
    font-size: 24rpx;
    margin-left: 40rpx;
    margin-top: 20rpx;
    height: 46rpx;
    line-height: 46rpx;
}

.targetAdd .add .img {
    width: 24rpx;
    height: 24rpx;
    margin: 10rpx 10rpx;
}

.targetAdd .add .selectAddress {
    margin-left: 280rpx;
    line-height: 40rpx;
    width: 110rpx;
    height: 40rpx;
    border-radius: 8rpx;
    background-color: rgba(217, 241, 221, 100);
    color: rgba(64, 184, 80, 100);
    font-size: 24rpx;
    text-align: center;
    border: 2rpx solid rgba(64, 184, 80, 100);
}


.addBox {
    display: flex;
}

.addBox .addWrap {
    display: flex;
    align-items: center;
    width: 650px;
    font-size: 28rpx;
    margin: 20rpx 30rpx;
}

.addBox .addWrap .addName {
    width: 156rpx;
    text-align: right;
}

.addBox .addWrap .entry {
    margin-left: 20rpx;
    margin-top: 10rpx;
    width: 460rpx;
    font-size: 27rpx;
    color: #d9d3d3;
}

.exchange {
    background-color: #7cb342;
    color: #fff;
    width: 176px;
    height: 36px;
    margin: 120rpx auto;
    line-height: 80rpx;
    text-align: center;
}