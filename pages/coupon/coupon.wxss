.header {
    width: 100%;
    height: 400rpx;
    background-color: #e7691d;
}

.bigBox {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    height: 900rpx;
    margin-bottom: 280rpx;
}

.bigBox .wrap {
    margin-top: 50rpx;
    width: 666rpx;
    height: 240rpx;
    border-radius: 12px;
    overflow: hidden;
}

.bigBox .wrap .img {
    width: 100%;
    height: 100%;
}

.coupon_btn {
    width: 374rpx;
    height: 82rpx;
    line-height: 82rpx;
    text-align: center;
    border-radius: 8rpx;
    margin: 220rpx auto;
    font-size: 36rpx;
    color: #fff;
    background-color: #e7691d;
}


