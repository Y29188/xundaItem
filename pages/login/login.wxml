<view class="main">
    <view class="login">
        <view class="kuang shadow">
            <open-data class="avatar-open" type="userAvatarUrl"></open-data>
            <view class="loginInfo">
                <view class="zhanghao">
                    <view>账号：</view>
                    <input placeholder="请输入账号" type="number" bindinput="content" name="userName" />
                </view>
                <view class="passwordCs zhanghao">
                    密码：<input placeholder="请输入密码" type="password" bindinput="password" name="userPassword" />
                </view>
            </view>
            <button class="btn" bindtap="bindGetLogin">点击登录</button>
        </view>
    </view>
</view>