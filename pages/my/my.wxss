.my {
    display: flex;
    justify-content: start;
    align-items: center;
    width: 750rpx;
    height: 324rpx;
    background-color: #7cb342;
}

.my .header {
    margin-left: 50rpx;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    background-color: brown;
    overflow: hidden;
}

.my .header .img {
    width: 140rpx;
    height: 140rpx;
}

.middle {
    box-sizing: border-box;
    width: 720rpx;
    height: 264rpx;
    line-height: 40rpx;
    border-radius: 20rpx 20rpx 20rpx 20rpx;
    background-color: rgba(255, 255, 255, 100);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    margin-top: 40rpx;
    margin-left: 13rpx;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
    border: 2rpx solid rgba(187, 187, 187, 100);
}

.middle .order {
    height: 88rpx;
    border-bottom: 2rpx solid #e2dfdf;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
}

.middle .order .left {
    font-size: 40rpx;
    color: #000;
    margin-left: 20rpx;
    margin-top: 30rpx;
}

.middle .order .right {
    font-size: 34rpx;
    color: #a39f9f;
    margin-top: 30rpx;
    margin-right: 16rpx;
}

.middle .icon {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
    text-align: center;
}

.middle .icon .img {
    width: 56rpx;
    height: 56rpx;
}

.middle .footer {
    margin-top: 80rpx;
    width: 720rpx;
    height: 601rpx;
    line-height: 40rpx;
    border-radius: 22rpx 22rpx 22rpx 22rpx;
    background-color: rgba(255, 255, 255, 100);
    text-align: center;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(0, 0, 0, 0.4);
    border: 2rpx solid rgba(187, 187, 187, 100);
}