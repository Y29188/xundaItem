.couponBox {
    display: flex;
    justify-content: space-around;
    width: 700rpx;
    height: 200rpx;
    box-sizing: border-box;
    margin: 30rpx auto;
    overflow: hidden;
    box-shadow: 0px 0px 6px 0px rgba(255, 247, 230, 100);
    border-radius: 40rpx;
}

.couponBox .couLeft {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 268rpx;
    height: 200rpx;
    background-color: #ffc04c;
    border-radius: 40rpx 0 0 40rpx;
    color: #fff;
}

.couponBox .couLeft .text1 {
    font-size: 70rpx;
}

.couponBox .couLeft .text2 {
    margin-left: 10rpx;
    font-size: 40rpx;
}

.couponBox .couRight {
    height: 200rpx;
    /* line-height: 100rpx; */
    width: 400rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    overflow: hidden;
}

.couponBox .couRight .wrap {
    display: flex;
    justify-content: center;
    flex-direction: column;
}

.couponBox .couRight .wrap .new {
    text-align: left;
    color: #000;
    /* margin-left: -140rpx; */
    font-size: 40rpx;
}

.couponBox .couRight .wrap .time {
    color: #bebdbc;
    margin-top: 20rpx;
}

.couponBox .couRight .zhekou {
    font-size: 28rpx;
    background-color: #ffb045;
    color: #fff;
    position: absolute;
    top: 10rpx;
    right: 0rpx;
    border-radius: 15rpx;
    padding: 6rpx;
}

.couponBox .couLeft1 {
    background-color: #ffdcac;
}

.couponBox .couRight1 {
    background-color: #ffffff;
    position: relative;
}

.couponBox .couRight1 .imgWrap {
    box-sizing: border-box;
    position: absolute;
    right: 70rpx;
    top: 50rpx;
}

.couponBox .couRight1 .imgWrap .img {
    width: 130rpx;
    height: 130rpx;
}

.couponBox .couLeft3{
    background-color: #cccccc;
}

.couponBox .couRight .zhekou2{
    background-color: #b8b8b8;
}



.exchange {
    display: flex;
    justify-content: center;
    align-items: center;
}

.exchange .btn {
    height: 72rpx;
    line-height: 72rpx;
    text-align: center;
    width: 352rpx;
    border-radius: 4px;
    background-color: #df6804;
    color: rgba(255, 255, 255, 100);
    font-size: 32rpx;
    margin: 100rpx 0;
}


/* 弹窗 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 16rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 50rpx 32rpx;
}

.modal-input {
    display: flex;
    background: #fff;
    border: 2rpx solid #ddd;
    border-radius: 4rpx;
    font-size: 28rpx;
}


.input {
    width: 100%;
    height: 82rpx;
    font-size: 28rpx;
    line-height: 28rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    color: #333;
}

input-holder {
    color: #666;
    font-size: 28rpx;
}

.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
}