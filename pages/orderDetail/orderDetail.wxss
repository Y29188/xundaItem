@import '../address/address.wxss';

.tip {
    height: 70rpx;
    line-height: 64rpx;
    padding: 6rpx;
    box-sizing: border-box;
    background-color: #b3d68e;
}

/* 头部 */
.address {
    height: 350rpx;
}

.first .order_text1 {
    font-size: 36rpx;
    margin: 30rpx 0 10rpx 30rpx;
}

.address .first .icon .img2 {
    margin-top: -20rpx;
    margin-left: -15rpx;
    width: 90rpx;
    height: 100rpx;
}

.address .desAdd {
    margin-top: -20rpx;
    padding-left: 45rpx;
}

.address .first .all1 {
    margin-left: 20rpx;
    margin-top: 30rpx;
}

.address .first .tel {
    font-size: 36rpx;

}

.address .first .copy {
    color: #40b850;
    font-size: 26rpx;
}


.address .addEng {
    font-size: 24rpx;
    margin-top: -20rpx;
    padding-left: 45rpx;
}

/* 中间 */
.orderMiddle {
    position: relative;
    width: 694rpx;
    height: 930rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.orderMiddle .redTip {
    color: #ec0606;
    font-size: 28rpx;
    margin: 30rpx;
}

.orderMiddle .kuaidigeshu {
    display: flex;
    margin: 0rpx 0 25rpx 30rpx
}

.orderMiddle .kuaidigeshu .putImg{
    position: relative;
}

.orderMiddle .kuaidigeshu .putImg .deleteImg{
    position: absolute;
    top: 8rpx;
    left: -50rpx;
    width: 40rpx;
    height: 40rpx;
}

.orderMiddle .kuaidigeshu .fuhao {
    position: absolute;
    left: 20rpx;
    top: 85rpx;
    color: red;
    font-size: 60rpx;
}

.orderMiddle .kuaidigeshu .kuaiDiNum {
    color: #7cb342;
    font-size: 36rpx;
}

.orderMiddle .kuaidigeshu .inp {
    width: 400rpx;
    margin-left: 20rpx;
    height: 50rpx;
    border-radius: 16rpx;
    border: 2rpx solid #bbbbbb;
    padding-left: 10rpx;
}


.orderMiddle .remarks {
    padding: 10rpx;
    margin: 0 auto;
    border: 2rpx solid #bbbbbb;
    border-radius: 16rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.orderMiddle .kuaidigeshu .inp1 {
    width: 550rpx;
}




.orderMiddle .add {
    width: 222rpx;
    height: 26rpx;
    line-height: 26rpx;
    border-radius: 22rpx;
    background-color: rgba(255, 255, 255, 100);
    color: rgba(64, 184, 80, 100);
    font-size: 24rpx;
    text-align: center;
    box-shadow: 0rpx 4rpx 10rpx 0rpx rgba(0, 0, 0, 0.4);
    padding: 10rpx;
    margin-top: 10rpx;
    margin-left: 420rpx;
}

/* 弹窗 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 16rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}

.modal-content {
    padding: 40rpx 32rpx;
    color: #969696;
    text-align: center;
}



.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #666;
    text-align: center;
    border-right: 1px solid #dedede;
}

.btn-confirm {
    width: 50%;
    color: #ec5300;
    text-align: center;
}

/* 底部 */
.orderDfooter {
    width: 694rpx;
    height: 400rpx;
    margin: 40rpx auto;
    opacity: 0.85;
    border-radius: 6rpx;
    background-color: rgba(255, 255, 255, 79);
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    box-shadow: 0rpx 4rpx 20rpx 0rpx rgba(0, 0, 0, 0.4);
    overflow: hidden;
    box-sizing: border-box;
}

.orderDfooter .orderNum {
    font-size: 32rpx;
    margin: 30rpx;
}

.orderDfooter .orderNum .copy {
    font-size: 28rpx;
    color: #40b850;
    margin-left: 10rpx;
}

.orderDfooter .orderNum .waitWrite {
    color: #dd716b;
}

/* 底部按钮 */
.bottom {
    display: flex;
    justify-content: space-between;
}

.bottom .bottom-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 376rpx;
    height: 114rpx;
    line-height: 114rpx;
    line-height: 20px;
    text-align: center;
    font-size: 38rpx;
}

.bottom .contactKefu {
    background-color: #7cb342;
    color: #fff;
}

.bottom .cancelOrder {
    background-color: #e2e2e2;
}