@import "../../pages/orderDetail/orderDetail.wxss";

/* 头部 */
.all {
    box-shadow: 0px 2px 10px 0px rgba(0, 0, 0, 0.4);
    margin: 40rpx auto;
    opacity: 0.85;
    overflow: hidden;
}

.supportHeader {
    width: 694rpx;
    height: 296rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.supportHeader .supNum {
    margin: 40rpx;
}

.supportHeader .supTitle {
    position: relative;
}

.supportHeader .supTitle .supImg {
    width: 75rpx;
    height: 75rpx;
    margin: -20rpx 0 0 30rpx;
    overflow: hidden;
}

.supportHeader .supTitle .supText {
    font-size: 40rpx;
    margin: -75rpx 0 0 120rpx;
}

.supportHeader .supInp {
    margin: 25rpx auto;
    width: 568rpx;
    height: 68rpx;
    border-radius: 22rpx;
    font-size: 28rpx;
    padding: 10rpx;
    border: 1rpx solid rgba(187, 187, 187, 100);
    box-sizing: border-box;
}


/* 中间 */
.supportMiddle {
    width: 694rpx;
    height: 340rpx;
    box-sizing: border-box;
}

.supportMiddle .supRedTip {
    margin: 20rpx 0 15rpx 40rpx;
    color: #ed493e;
    font-size: 24rpx;
    overflow: hidden;
}

.supportMiddle .supRedTip1 {
    margin: -10rpx 0 15rpx 40rpx;
}

.supportMiddle .textMid {
    width: 604rpx;
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    overflow: hidden;
    margin-top: 30rpx;
}

.supportMiddle .textMid .text1 {
    margin: 0rpx 0 20rpx 40rpx;
}

.supportMiddle .line {
    width: 600rpx;
    margin: 0 auto;
    border-bottom: 1px solid rgba(187, 187, 187, 100);
}

.wx-switch-input {
    width: 84rpx !important;
    height: 50rpx !important;
    margin: 0 !important;
    padding: 0 !important;
}

/*白色样式（false的样式）*/
.wx-switch-input::before {
    width: 79rpx !important;
    height: 46rpx !important;
}

/*绿色样式（true的样式）*/
.wx-switch-input::after {
    width: 45rpx !important;
    height: 46rpx !important;
}


/* 底部 */
.supportFooter {
    height: 400rpx;
    margin-bottom: 250rpx;
}

.bottom .next {
    background-color: #274f05;
    color: #f5e48d;
}

/* 弹窗 */
.modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
}

.modal-dialog {
    width: 540rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 105rpx;
    border-radius: 16rpx;
}

.modal-title {
    padding-top: 50rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
}


.modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    font-size: 34rpx;
    line-height: 86rpx;
}

.btn-cancel {
    width: 50%;
    color: #e5c701;
    text-align: center;
    background-color: #274f05;
}

.btn-confirm {
    width: 50%;
    color: #fff;
    background-color: #7cb342;
    text-align: center;
}